for dir in /app/*/     # list directories in the form "/tmp/dirname/"
do
    echo check ${dir}
    dir=${dir%*/}      # remove the trailing "/"
    cd ${dir}
    git remote update && git status|grep "is behind" && git pull && cd /app && source .env && ssh -i ./$HOST_RSA $HOST_USER@$CONTAINER_HOST "cd $HOST_PATH; docker-compose up -d --build ${dir##*/}"
done
